<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyDiary</title>
    <link rel="stylesheet" href="/stylesheets/style.css"></title>
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
<div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 p-10 text-white">
        <form action="/create" method="post">
            <input class="block w-full rounded-md outline-none px-3 py-2 mb-4 bg-zinc-800"  type="text" placeholder="title goes hrek" name="title" >
            <textarea class="block w-full  rounded-md outline-none px-3 py-2 resize-none mb-4 bg-zinc-800" placeholder="Write your task here" name="details"></textarea>

            <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
        </form>
    </div>
  
   <div class="tasks flex flex-wrap gap-4 p-10">
    <% if (files.length > 0) { %>
      <% files.forEach(function (val) { %>
        <div class="task w-72 px-3 py-2 mb-4 bg-zinc-800">
          <h1 class="text-white text-xl tracking-tighter"><%= val %></h1>
          <a class="text-white inline-block mt-2" href="/files/<%= val %> ">Read More</a>
        </div>
      <% }); %>
    <% } else { %>
      <h3 class="text-white">No tasks yet</h3>
    <% } %>
    
   </div>
</div>

    <script src="/javascripts/script.js"></script>
</body>
</html>